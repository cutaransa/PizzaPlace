<div class="modal-content">
    <form novalidate name="vm.userForm" class="form-vertical" ng-submit="vm.save()">
        <div class="modal-header">
            <button type="button" class="close" ng-click="vm.cancel()" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{ vm.headerTitle }}</h4>
        </div>
        <div class="modal-body">
            <div class="row center-block">
                <div class="col-md-12">
                    <div class="form-vertical">
                        <div class="form-group" ng-show="vm.showMessage">
                            <div class="alert alert-danger">
                                <span ng-repeat="message in vm.errorMessages">
                                    {{ message }}<br />
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="code" class="control-label">Code *</label>
                            <input class="form-control"
                                   name="code"
                                   type="text"
                                   placeholder="Code"
                                   required
                                   ng-model="vm.pizza.code" />
                        </div>
                        <div class="form-group">
                            <label for="type"
                                   class="control-label">
                                Type *
                            </label>
                            <select class="form-control"
                                    name="type"
                                    ng-model="vm.pizza.typeId"
                                    ng-options="type.typeId as type.name for type in vm.pizza.pizzaTypes">
                                <option value="">
                                    -- Select Type --
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="size"
                                   class="control-label">
                                Size *
                            </label>
                            <select class="form-control"
                                    name="size"
                                    ng-model="vm.pizza.size">
                                <option value="">
                                    -- Select Size --
                                </option>
                                <option value="S">
                                    Small
                                </option>
                                <option value="M">
                                    Medium
                                </option>
                                <option value="L">
                                    Large
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="price" class="control-label">Price *</label>
                            <input class="form-control"
                                   name="price"
                                   type="number"
                                   step="0.01"
                                   placeholder="0.00"
                                   required
                                   ng-model="vm.pizza.price" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" ng-click="vm.cancel()" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>