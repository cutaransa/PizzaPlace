<div class="modal-content">
    <form novalidate name="vm.userForm" class="form-vertical" ng-submit="vm.save()">
        <div class="modal-header">
            <button type="button" class="close" ng-click="vm.cancel()" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{ vm.headerTitle }}</h4>
        </div>
        <div class="modal-body">
            <div class="row center-block">
                <div class="col-md-12">
                    <div class="form-vertical">
                        <div class="form-group" ng-show="vm.showMessage">
                            <div class="alert alert-danger">
                                <span ng-repeat="message in vm.errorMessages">
                                    {{ message }}<br />
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstName" class="control-label">Name *</label>
                            <input class="form-control"
                                   name="name"
                                   type="text"
                                   placeholder="Name"
                                   required
                                   ng-model="vm.category.name" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" ng-click="vm.cancel()" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>