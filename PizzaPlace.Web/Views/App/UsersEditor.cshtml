<div class="modal-content">
    <form ng-submit="vm.save()" class="form-vertical" novalidate>
        <div class="modal-header">
            <button type="button" class="close" ng-click="vm.cancel()" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{ vm.headerTitle }}</h4>
        </div>
        <div class="modal-body v-spacer-20">
            <div class="row center-block">
                <div class="col-md-12">
                    <div class="form-vertical">
                        <div class="form-group" ng-show="vm.showMessage">
                            <div class="alert alert-danger">
                                <span ng-repeat="message in vm.errorMessages">
                                    {{ message }}<br />
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstName" class="control-label">Name *</label>
                            <input class="form-control"
                                   name="name"
                                   type="text"
                                   placeholder="Name"
                                   required
                                   ng-model="vm.user.name" />
                        </div>
                        <div class="form-group">
                            <label for="userName" class="control-label">User Name *</label>
                            <input class="form-control"
                                   name="userName"
                                   type="text"
                                   placeholder="User Name"
                                   required
                                   ng-model="vm.user.userName" />
                        </div>
                        <div class="form-group">
                            <label for="emailAddress" class="control-label">Email Address </label>
                            <input class="form-control"
                                   name="emailAddress"
                                   type="email"
                                   placeholder="jane.doe@email.com"
                                   ng-model="vm.user.emailAddress" />
                        </div>
                        <div class="form-group">
                            <label for="role" class="control-label">Role *</label>
                            <select class="form-control"
                                    name="role"
                                    required
                                    ng-model="vm.user.roleId"
                                    ng-options="role.id as role.name for role in vm.user.roles">
                                <option value="">-- Select Role --</option>
                            </select>
                        </div>
                        <div class="form-group" ng-hide="vm.user.administratorId">
                            <label for="password1" class="control-label">Password *</label>
                            <input class="form-control"
                                   name="password1"
                                   type="password"
                                   placeholder="Password"
                                   ng-required="!vm.user.administratorId"
                                   ng-model="vm.user.password" />
                        </div>
                        <div class="form-group" ng-hide="vm.user.administratorId">
                            <label for="password2" class="control-label">Confirm Password *</label>
                            <input class="form-control"
                                   name="password2"
                                   type="password"
                                   placeholder="Confirm Password"
                                   ng-required="!vm.user.administratorId"
                                   ng-model="vm.user.confirmPassword" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer footer v-spacer-20">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" ng-click="vm.cancel()" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
</div>